def workspace;
node{
    stage("Build"){
        workspace = pwd()
        checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/madumnp80/Git-Mavin-Practice']]])
 
        echo "build step"
    }
    stage("test"){
        echo "test step"
    }
    stage("deploy"){
        echo "deploy step"
    }
}
